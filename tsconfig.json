{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2021",
        "outDir": "dist",
        "baseUrl": "./",
        "strict": true,
        "sourceMap":true,
        "moduleResolution": "Node",
        "noImplicitAny": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strictPropertyInitialization": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": ["./"],
    "exclude": ["node_modules", "dist"]
}